<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="uk.co.tekkies.readings"
      android:versionCode="114029000"
      android:versionName="2.90.0"
      android:installLocation="auto">
    <uses-sdk android:minSdkVersion="14" android:targetSdkVersion="14" />
    <supports-screens android:smallScreens="true"/>
	<uses-permission android:name="android.permission.INTERNET"/>

<!-- 	        android:theme="@style/Theme.Sherlock.Light"
 -->	
	
	<application android:icon="@drawable/ic_launcher"
	    android:allowBackup="true" 
	    android:allowClearUserData="true"
        android:label="@string/app_name"
        android:theme="@style/Day"
        android:name="ReadingsApplication">
        <activity android:name="uk.co.tekkies.readings.activity.ReadingsActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="uk.co.tekkies.readings.workinprogress.PassageActivity"
                  android:label="@string/app_name">
        </activity>
        
        
        <activity android:name="uk.co.tekkies.readings.activity.SettingsActivity"
            	android:label="@string/activity_title_settings">
		    <intent-filter>
		       <action android:name="android.intent.action.MANAGE_NETWORK_USAGE" />
		       <category android:name="android.intent.category.DEFAULT" />
		    </intent-filter>
		</activity>
     
    </application>
</manifest> 